rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isAuthenticated() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'founder'];
    }

    function isAdminOrOwner(userId) {
      return isAdmin() || isOwner(userId);
    }

    // Users collection
    match /users/{userId} {
      // Anyone can read public user profiles
      allow read: if true;

      // Only the user themselves can create their document (during registration)
      allow create: if isOwner(userId);

      // Only the user or admin can update
      allow update: if isAdminOrOwner(userId);

      // Only admin can delete
      allow delete: if isAdmin();
    }

    // Writeups collection
    match /writeups/{writeupId} {
      // Anyone can read writeups
      allow read: if true;

      // Only authenticated users can create writeups
      allow create: if isAuthenticated() &&
                       request.resource.data.authorUid == request.auth.uid;

      // Only author or admin can update
      allow update: if isAuthenticated() &&
                       (resource.data.authorUid == request.auth.uid || isAdmin());

      // Only author or admin can delete
      allow delete: if isAuthenticated() &&
                       (resource.data.authorUid == request.auth.uid || isAdmin());
    }

    // CTF Events collection
    match /ctf_events/{eventId} {
      // Anyone can read events
      allow read: if true;

      // Only admin can create/update/delete events
      allow create, update, delete: if isAdmin();
    }

    // Chat messages
    match /chat_messages/{channel}/messages/{messageId} {
      // Only authenticated users can read/write messages
      allow read: if isAuthenticated();

      // Users can create messages with their own userId
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid;

      // Only message author or admin can update/delete
      allow update, delete: if isAuthenticated() &&
                               (resource.data.userId == request.auth.uid || isAdmin());
    }

    // User presence
    match /user_presence/{userId} {
      // Anyone can read presence
      allow read: if true;

      // Users can only update their own presence
      allow create, update: if isOwner(userId);

      // Users can delete their own presence, or admin can delete any
      allow delete: if isAdminOrOwner(userId);
    }

    // Invites collection (admin only)
    match /invites/{inviteId} {
      // Anyone can read invites (needed to validate tokens)
      allow read: if true;

      // Only admin can create/update/delete
      allow create, update, delete: if isAdmin();
    }

    // Join requests collection
    match /join_requests/{requestId} {
      // Anyone can create join requests (public form)
      allow create: if true;

      // Only admin can read/update/delete
      allow read, update, delete: if isAdmin();
    }

    // Sponsor contacts collection
    match /sponsor_contacts/{contactId} {
      // Anyone can create sponsor contacts (public form)
      allow create: if true;

      // Only admin can read/update/delete
      allow read, update, delete: if isAdmin();
    }
  }
}
